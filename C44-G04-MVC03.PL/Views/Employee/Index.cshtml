@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
    // string? ViewDataMessage = ViewData["Message"] as string;
    // string? ViewBagMessage = ViewBag.Message;
}

<h1>All Employee</h1>

<br />
<br />
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
    {
        <div class="alert alert-success">
        <p>@TempData["Message"]</p>
        </div>
    }

<a asp-action="Create" class="btn btn-primary" asp-controller="Employee">Create Employees</a>
<br />
<br />
@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Adress</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>@Html.DisplayNameFor(E => E.HireDate)</th>
                <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
                <th>Department</th>
                <th>Detalis</th>
                <th>Update</th>
                <th>delete</th>
            </tr>   
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Salary</td>
                    <td>@item.IsActive</td>
                    <td>@item.isDeleted</td>
                    <td>@item.HireDate</td>
                    <td>@item.CreateAt</td>
                    <td>
                        @if (item.Department != null)
                        {
                            @item.Department.Name
                        }
                        else
                        {
                            <span class="text-danger">No Department</span>
                        }
                    </td>
                    <partial name="_ButtonPartialView" model="@item.Id"/>
                </tr>
            }
    </table>
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>There's No Employee :(</h4>
    </div>
}









