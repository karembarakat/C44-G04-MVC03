@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>

<br />
<br />

<a asp-action="Create" class="btn btn-primary" asp-controller="Employee">Create Employee</a>
<br />
<br />
@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Adress</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>@Html.DisplayNameFor(E => E.HireDate)</th>
                <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
                <th>Detalis</th>
                <th>Update</th>
                <th>delete</th>
            </tr>   
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Salary</td>
                    <td>@item.IsActive</td>
                    <td>@item.isDeleted</td>
                    <td>@item.HireDate</td>
                    <td>@item.CreateAt</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
    </table>
}
else
{
    <div class="mt-4 alert alert-info">
        <h4>There's No Employee :(</h4>
    </div>
}









